@model MvcStokProject.Models.Entity.TblMusteriler
@{
    ViewBag.Title = "EkleMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3>Müsteri Ekleme Sayfası</h3>

<form method="post" class="form-group">
    @*<div>
        <label>Müşteri Adı</label>
        <input type="text" class="form-control" name="MusteriAd" />
    </div>*@
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(x=>x.MusteriAd, new {@class="form-control"})
        @Html.ValidationMessageFor(x => x.MusteriAd, "", new {@style="color:red"})
    </div>
    <br />
    <div>
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" name="MusteriSoyad" />
    </div>
    <br />
    <button class="btn btn-success" id="btnMusteriEkle">Müşteri Ekle</button>

    <script>
        $('#btnMusteriEkle').click(function () {
            alert('Müşteri ekleme işlemi yapıldı.');
        });
    </script>




</form>