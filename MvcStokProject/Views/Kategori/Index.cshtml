@model PagedList.IPagedList<MvcStokProject.Models.Entity.TblKategoriler>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    int count = 0;
}
<br />
<h3>Kategori Sayfası</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.KategoriAd</td>
            <td><a href="/Kategori/SilKategori/@item.KategoriID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/GuncelleKategori/@item.KategoriID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))
<br />
<a href="/Kategori/EkleKategori" class="btn btn-primary">Yeni Kategori Ekle</a>
